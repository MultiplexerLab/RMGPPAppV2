<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ipa.rmgppapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.OBStyle"
            android:label="@string/title_activity_obstyle"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="Login"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.DashboardActivity"
            android:label="Dashboard" />
        <activity
            android:name=".activity.StyleListActivity"
            android:label="Style List"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.AddNewStyle"
            android:label="Add New Style" />
        <activity
            android:name=".activity.SavedReportActivity"
            android:label="Saved Report" />
        <activity
            android:name=".activity.WorkerAssignActivity"
            android:label="Assign Workers"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.ProductionActivity"
            android:label="Production Report"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>
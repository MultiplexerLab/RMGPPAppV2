<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:showIn="@layout/activity_obstyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/editTextStyleOB"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:hint="Type Style No" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:onClick="getOrderListData"
            android:layout_marginLeft="20dp"
            android:src="@drawable/search" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextSMVOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SMV" />

    <EditText
        android:id="@+id/editTextBuyerOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buyer" />

    <EditText
        android:id="@+id/editTextItemOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item" />

    <EditText
        android:id="@+id/editTextManPower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Required Manpower" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="saveOBStyleData"
        android:text="Save" />

</LinearLayout>